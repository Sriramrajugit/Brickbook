generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Account {
  id           Int           @id @default(autoincrement())
  name         String
  balance      Float         @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@map("accounts")
}

model Transaction {
  id          Int       @id @default(autoincrement())
  amount      Float
  description String?
  category    String
  type        String
  date        DateTime  @db.Timestamp(3)
  accountId   Int
  account     Account   @relation(fields: [accountId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("transactions")
}


model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  etype       String?
  salary      Float?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  status      String       @default("Active")
  attendances Attendance[]
  payrolls    Payroll[]

  @@map("employees")
}

model Attendance {
  id        Int      @id @default(autoincrement())
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  date       DateTime
  status     String   // 'Present', 'Absent', 'Half Day'
  
  @@unique([employeeId, date])
  @@map("attendances")
}

model Payroll {
  id         Int      @id @default(autoincrement())
  employeeId Int
  accountId  Int
  fromDate   DateTime
  toDate     DateTime
  amount     Float
  remarks    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@map("payrolls")
}

model Advance {
  id        Int      @id @default(autoincrement())
  amount    Float
  reason    String?
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("advances")
}

