generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Company {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  accounts     Account[]
  advances     Advance[]
  attendances  Attendance[]
  categories   Category[]
  employees    Employee[]
  payrolls     Payroll[]
  sites        Site[]
  transactions Transaction[]
  users        User[]
  suppliers    Supplier[]
  items        Item[]
  invoices     Invoice[]
  stockTransactions StockTransaction[]

  @@map("companies")
}

model Site {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  location     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    Int
  accounts     Account[]
  company      Company       @relation(fields: [companyId], references: [id])
  transactions Transaction[]
  users        User[]
  invoices     Invoice[]
  stockTransactions StockTransaction[]

  @@index([companyId])
  @@map("sites")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String?       @unique
  name         String?
  password     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  logoutTime   DateTime?
  role         UserRole      @default(GUEST)
  status       String        @default("Active")
  siteId       Int?
  companyId    Int
  transactions Transaction[]
  invoices     Invoice[]
  company      Company       @relation(fields: [companyId], references: [id])
  site         Site?         @relation(fields: [siteId], references: [id])

  @@index([companyId])
  @@map("users")
}

model Account {
  id           Int           @id @default(autoincrement())
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  budget       Float         @default(0)
  type         String        @default("General")
  siteId       Int?
  endDate      DateTime?
  startDate    DateTime?
  companyId    Int
  company      Company       @relation(fields: [companyId], references: [id])
  site         Site?         @relation(fields: [siteId], references: [id])
  transactions Transaction[]

  @@index([companyId])
  @@map("accounts")
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    Int
  company      Company       @relation(fields: [companyId], references: [id])
  transactions Transaction[]

  @@unique([name, companyId])
  @@index([companyId])
  @@map("categories")
}

model Transaction {
  id            Int       @id @default(autoincrement())
  amount        Float
  description   String?
  category      String
  type          String
  date          DateTime
  accountId     Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  categoryId    Int?
  paymentMode   String    @default("G-Pay")
  createdBy     Int?
  companyId     Int
  siteId        Int?
  account       Account   @relation(fields: [accountId], references: [id])
  categoryRef   Category? @relation(fields: [categoryId], references: [id])
  company       Company   @relation(fields: [companyId], references: [id])
  createdByUser User?     @relation(fields: [createdBy], references: [id])
  site          Site?     @relation(fields: [siteId], references: [id])

  @@index([companyId])
  @@index([siteId])
  @@map("transactions")
}

model Employee {
  id              Int          @id @default(autoincrement())
  name            String
  etype           String?      // Designation
  salary          Float?
  salaryFrequency String       @default("Monthly")  // Daily or Monthly
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  status          String       @default("Active")
  companyId       Int
  advances        Advance[]
  attendances     Attendance[]
  company         Company      @relation(fields: [companyId], references: [id])
  payrolls        Payroll[]

  @@map("employees")
}

model Attendance {
  id         Int      @id @default(autoincrement())
  employeeId Int
  date       DateTime
  status     Float
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@map("attendances")
}

model Payroll {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  accountId  Int
  fromDate   DateTime
  toDate     DateTime
  remarks    String?
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@map("payrolls")
}

model Advance {
  id         Int      @id @default(autoincrement())
  amount     Float
  reason     String?
  date       DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employeeId Int
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@map("advances")
}

// ==================== INVENTORY MODULE (PREMIUM) ====================

model Supplier {
  id           Int          @id @default(autoincrement())
  name         String
  email        String?
  phone        String?
  address      String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  companyId    Int
  company      Company      @relation(fields: [companyId], references: [id])
  invoices     Invoice[]

  @@unique([name, companyId])
  @@index([companyId])
  @@map("suppliers")
}

model Item {
  id              Int                 @id @default(autoincrement())
  name            String
  description     String?
  category        String?
  unit            String              @default("Bag") // Bag, Kg, Ton, Nos, etc
  openingStock    Float               @default(0)
  currentStock    Float               @default(0)
  reorderLevel    Float?
  defaultRate     Float?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  companyId       Int
  company         Company             @relation(fields: [companyId], references: [id])
  stockTransactions StockTransaction[]

  @@unique([name, companyId])
  @@index([companyId])
  @@map("items")
}

model Invoice {
  id              Int                 @id @default(autoincrement())
  invoiceNumber   String
  supplierId      Int?
  invoiceDate     DateTime
  totalAmount     Float
  taxAmount       Float?              @default(0)
  notes           String?
  fileUrl         String?
  ocrStatus       String              @default("pending") // pending, completed, failed
  status          String              @default("draft") // draft, confirmed, posted
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  createdBy       Int?
  companyId       Int
  siteId          Int?
  supplier        Supplier?           @relation(fields: [supplierId], references: [id])
  company         Company             @relation(fields: [companyId], references: [id])
  site            Site?               @relation(fields: [siteId], references: [id])
  createdByUser   User?               @relation(fields: [createdBy], references: [id])
  stockTransactions StockTransaction[]

  @@unique([invoiceNumber, companyId])
  @@index([companyId])
  @@index([siteId])
  @@map("invoices")
}

model StockTransaction {
  id              Int       @id @default(autoincrement())
  itemId          Int
  invoiceId       Int?
  transactionType String    // STOCK_IN, STOCK_OUT
  quantity        Float
  rate            Float?
  totalAmount     Float?
  notes           String?
  createdAt       DateTime  @default(now())
  companyId       Int
  siteId          Int?
  item            Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  invoice         Invoice?  @relation(fields: [invoiceId], references: [id], onDelete: SetNull)
  company         Company   @relation(fields: [companyId], references: [id])
  site            Site?     @relation(fields: [siteId], references: [id])

  @@index([itemId])
  @@index([invoiceId])
  @@index([companyId])
  @@index([siteId])
  @@map("stock_transactions")
}

// ==================== END INVENTORY MODULE ====================

enum UserRole {
  OWNER
  SITE_MANAGER
  GUEST
}
