generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Company {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  accounts     Account[]
  advances     Advance[]
  attendances  Attendance[]
  categories   Category[]
  employees    Employee[]
  payrolls     Payroll[]
  sites        Site[]
  transactions Transaction[]
  users        User[]

  @@map("companies")
}

model Site {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  location     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    Int
  accounts     Account[]
  company      Company       @relation(fields: [companyId], references: [id])
  transactions Transaction[]
  users        User[]

  @@index([companyId])
  @@map("sites")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String?       @unique
  name         String?
  password     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  logoutTime   DateTime?
  role         UserRole      @default(GUEST)
  status       String        @default("Active") // User account status: Active/Inactive/Suspended
  siteId       Int?
  companyId    Int
  transactions Transaction[]
  company      Company       @relation(fields: [companyId], references: [id])
  site         Site?         @relation(fields: [siteId], references: [id])

  @@index([companyId])
  @@map("users")
}

model Account {
  id           Int           @id @default(autoincrement())
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  budget       Float         @default(0)
  type         String        @default("General")
  siteId       Int?
  endDate      DateTime?
  startDate    DateTime?
  companyId    Int
  company      Company       @relation(fields: [companyId], references: [id])
  site         Site?         @relation(fields: [siteId], references: [id])
  transactions Transaction[]

  @@index([companyId])
  @@map("accounts")
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  companyId    Int
  company      Company       @relation(fields: [companyId], references: [id])
  transactions Transaction[]

  @@unique([name, companyId])
  @@index([companyId])
  @@map("categories")
}

model Transaction {
  id            Int       @id @default(autoincrement())
  amount        Float
  description   String?
  category      String
  type          String
  date          DateTime
  accountId     Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  categoryId    Int?
  paymentMode   String    @default("G-Pay")
  createdBy     Int?
  companyId     Int
  siteId        Int?
  account       Account   @relation(fields: [accountId], references: [id])
  categoryRef   Category? @relation(fields: [categoryId], references: [id])
  company       Company   @relation(fields: [companyId], references: [id])
  createdByUser User?     @relation(fields: [createdBy], references: [id])
  site          Site?     @relation(fields: [siteId], references: [id])

  @@index([companyId])
  @@index([siteId])
  @@map("transactions")
}

model Employee {
  id              Int          @id @default(autoincrement())
  name            String
  etype           String?      // Designation
  salary          Float?
  salaryFrequency String       @default("Monthly")  // Daily or Monthly
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  status          String       @default("Active")
  companyId       Int
  advances        Advance[]
  attendances     Attendance[]
  company         Company      @relation(fields: [companyId], references: [id])
  payrolls        Payroll[]

  @@map("employees")
}

model Attendance {
  id         Int      @id @default(autoincrement())
  employeeId Int
  date       DateTime
  status     Float
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@map("attendances")
}

model Payroll {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  accountId  Int
  fromDate   DateTime
  toDate     DateTime
  remarks    String?
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@map("payrolls")
}

model Advance {
  id         Int      @id @default(autoincrement())
  amount     Float
  reason     String?
  date       DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employeeId Int
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@map("advances")
}

